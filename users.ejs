<%- include('layout', { body: `
    <h2>Registered Users</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Current OTP</th>
                <th>OTP Expiry</th>
            </tr>
        </thead>
        <tbody>
            ${users.map(u => `
            <tr>
                <td>${u.email}</td>
                <td>${u.otp || '-'}</td>
                <td>${u.otpExpiry ? new Date(u.otpExpiry).toLocaleString() : '-'}</td>
            </tr>
            `).join('')}
        </tbody>
    </table>
    ` })
%>